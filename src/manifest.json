{
  "manifest_version": 3,
  "name": "YouTube Helper",
  "description": "Chrome Extension for YouTube",
  "version": "1.0.1",
  "content_scripts": [{
    "run_at": "document_end",
    "matches": ["https://www.youtube.com/*"],
    "all_frames": false,
    "js": ["content.js"]
  },{
    "run_at": "document_end",
    "matches": ["https://www.youtube.com/live_chat*"],
    "all_frames": true,
    "js": ["content-iframe.js"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
